@{
    ViewData["Title"] = "Home Page";
}

<div class="mt-4 p-5 bg-light text-center">
    <h2 class="display-4">Hello, Admin!</h2>
    <p class="lead mb-1 mt-3">
        This is your administrator area
    </p>
    <p class="lead mt-1">
        You can also see <b>all rents</b> and <b>all cars</b> in the system.
    </p>
    <hr class="my-4">
    <a asp-area="Admin" asp-controller="Cars" asp-action="All"
       class="btn btn-primary btn-lg">Cars for approving</a>
    <span>  |   </span>
    <a asp-area="Admin" asp-controller="Booking" asp-action="GetOfferts"
       class="btn btn-primary btn-lg">Get All Rents</a>
    <span>  |   </span>
    <a asp-area="Admin" asp-controller="Booking" asp-action="Rent"
       class="btn btn-primary btn-lg">Get Booking Offerts</a>
</div>